<p id="notice"><%= notice %></p>

<h1>Gossips</h1>

<table>
  <thead>
    <tr>
      <th>Auteur</th>
      <th>Contenu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gossips.each do |gossip| %>
      <tr>
        <!-- Afficher le nom de l'auteur-->
        <td><%= gossip.moussaillon.username %></td>
        <td><%= gossip.content %></td>
        <!-- Afficher la date de création (en allant dans schema.rb pour voir le nom)-->
        <td><%= gossip.created_at %></td> 



        <!-- empêcher tous les moussaillons de supprimer les gossips d'autres-->
        <% if moussaillon_signed_in? && current_moussaillon.id == gossip.moussaillon_id %>
        <td><%= link_to 'Voir', gossip %></td>
        <td><%= link_to 'Editer', edit_gossip_path(gossip) %></td>
        <td><%= link_to 'Supprimer', gossip, method: :delete, data: { confirm: 'Tu es sur(e) ?' } %></td>
        <% end %>
        <% end %>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau Gossip', new_gossip_path %>


